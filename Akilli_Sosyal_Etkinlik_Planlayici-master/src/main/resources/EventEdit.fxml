<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.EventEditController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Etkinlik Başlığı:" />
    <TextField fx:id="txtEventTitle" />

    <Label text="Etkinlik Tarihi:" />
    <DatePicker fx:id="datePickerEventDate" />

    <Label text="Etkinlik Saati:" />
    <TextField fx:id="txtEventTime" promptText="Örn: 14:00" />

    <Label text="Etkinlik Konumu:" />
    <TextField fx:id="txtEventLocation" />

    <Button onAction="#handleUpdateEvent" text="Etkinlik Güncelle" />
</VBox>
